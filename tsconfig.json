{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "rootDir": "./",
  },
  "include": ["src/**/*.ts", "migrations/**/*.ts", "seeders/**/*.ts"],
  "exclude": ["node_modules"]
}